{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@colourful/general": [
        "./src/general"
      ],
      "@colourful/navigation": [
        "./src/main/Navigation"
      ],
      "@colourful/screens": [
        "./src/main/Screens"
      ],
      "@colourful/state": [
        "./src/general/State"
      ]
    },
    "types": [
      "react-native",
      "node"
    ]
  },
  "extends": "expo/tsconfig.base"
}
